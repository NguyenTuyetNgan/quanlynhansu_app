<Window x:Class="quanlynhansu_app.Views.Dialogs.NhanSuDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thông tin nhân sự"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

	<Grid Margin="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- ================= HEADER ================= -->
		<StackPanel Grid.Row="0" Margin="0,0,0,20">
			<TextBlock x:Name="txtTitle"
                      Text="➕ Thêm nhân sự mới"
                      FontSize="24"
                      FontWeight="Bold"/>
		</StackPanel>

		<!-- ================= FORM ================= -->
		<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
			<Border Style="{StaticResource CardStyle}">
				<StackPanel>
					<!-- Ảnh đại diện (optional) -->
					<Border Width="100"
                           Height="100"
                           CornerRadius="50"
                           Background="#E0E0E0"
                           Margin="0,0,0,20">
						<TextBlock Text="👤"
                                  FontSize="48"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
					</Border>

					<!-- Form grid 2 columns -->
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="20"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>

						<!-- Row 0: Mã NV và Họ tên -->
						<StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
							<TextBlock Text="Mã nhân viên *" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<TextBox x:Name="txtMaNhanVien"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    materialDesign:HintAssist.Hint="VD: NV001"/>
						</StackPanel>

						<StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
							<TextBlock Text="Họ và tên *" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<TextBox x:Name="txtHoTen"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    materialDesign:HintAssist.Hint="VD: Nguyễn Văn A"/>
						</StackPanel>

						<!-- Row 1: Ngày sinh và Giới tính -->
						<StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
							<TextBlock Text="Ngày sinh" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<DatePicker x:Name="dpNgaySinh"
                                       Style="{StaticResource MaterialDesignDatePicker}"/>
						</StackPanel>

						<StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
							<TextBlock Text="Giới tính" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<ComboBox x:Name="cboGioiTinh">
								<ComboBoxItem Content="Nam" IsSelected="True"/>
								<ComboBoxItem Content="Nữ"/>
								<ComboBoxItem Content="Khác"/>
							</ComboBox>
						</StackPanel>

						<!-- Row 2: SĐT và Email -->
						<StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,15">
							<TextBlock Text="Số điện thoại" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<TextBox x:Name="txtSoDienThoai"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    materialDesign:HintAssist.Hint="VD: 0912345678"/>
						</StackPanel>

						<StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,15">
							<TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<TextBox x:Name="txtEmail"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    materialDesign:HintAssist.Hint="VD: example@gmail.com"/>
						</StackPanel>

						<!-- Row 3: Địa chỉ (full width) -->
						<StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
							<TextBlock Text="Địa chỉ" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<TextBox x:Name="txtDiaChi"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    Height="60"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    materialDesign:HintAssist.Hint="Nhập địa chỉ đầy đủ..."/>
						</StackPanel>

						<!-- Row 4: Chức vụ và Phòng ban -->
						<StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,0,15">
							<TextBlock Text="Chức vụ *" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<ComboBox x:Name="cboChucVu"
                                     DisplayMemberPath="Content"
                                     SelectedValuePath="Tag"/>
						</StackPanel>

						<StackPanel Grid.Row="4" Grid.Column="2" Margin="0,0,0,15">
							<TextBlock Text="Phòng ban *" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<ComboBox x:Name="cboPhongBan"
                                     DisplayMemberPath="Content"
                                     SelectedValuePath="Tag"/>
						</StackPanel>

						<!-- Row 5: Ngày vào làm và Loại hợp đồng -->
						<StackPanel Grid.Row="5" Grid.Column="0" Margin="0,0,0,15">
							<TextBlock Text="Ngày vào làm" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<DatePicker x:Name="dpNgayVaoLam"
                                       Style="{StaticResource MaterialDesignDatePicker}"/>
						</StackPanel>

						<StackPanel Grid.Row="5" Grid.Column="2" Margin="0,0,0,15">
							<TextBlock Text="Loại hợp đồng" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<ComboBox x:Name="cboLoaiHopDong"
                                     DisplayMemberPath="Content"
                                     SelectedValuePath="Tag"/>
						</StackPanel>

						<!-- Row 6: Mức lương và Trình độ -->
						<StackPanel Grid.Row="6" Grid.Column="0" Margin="0,0,0,15">
							<TextBlock Text="Mức lương (VNĐ)" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<TextBox x:Name="txtMucLuong"
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    materialDesign:HintAssist.Hint="VD: 10000000"/>
						</StackPanel>

						<StackPanel Grid.Row="6" Grid.Column="2" Margin="0,0,0,15">
							<TextBlock Text="Trình độ học vấn" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<ComboBox x:Name="cboTrinhDo"
                                     DisplayMemberPath="Content"
                                     SelectedValuePath="Tag"/>
						</StackPanel>

						<!-- Row 7: Trạng thái -->
						<StackPanel Grid.Row="7" Grid.Column="0" Margin="0,0,0,15">
							<TextBlock Text="Trạng thái" FontWeight="SemiBold" Margin="0,0,0,8"/>
							<ComboBox x:Name="cboTrangThai"
                                     DisplayMemberPath="Content"
                                     SelectedValuePath="Tag"/>
						</StackPanel>
					</Grid>
				</StackPanel>
			</Border>
		</ScrollViewer>

		<!-- ================= FOOTER BUTTONS ================= -->
		<Grid Grid.Row="2" Margin="0,20,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<Button Grid.Column="0"
                   Content="Hủy"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Width="120"
                   Height="40"
                   HorizontalAlignment="Left"
                   Click="BtnCancel_Click"/>

			<Button Grid.Column="1"
                   Content="💾 Lưu thông tin"
                   Style="{StaticResource PrimaryButtonStyle}"
                   Width="150"
                   Height="40"
                   Click="BtnSave_Click"/>
		</Grid>
	</Grid>
</Window>