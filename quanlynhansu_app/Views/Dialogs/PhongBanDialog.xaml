<Window x:Class="quanlynhansu_app.Views.Dialogs.PhongBanDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Thông tin phòng ban" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="txtTitle" 
                      Text="➕ Thêm phòng ban mới" 
                      FontSize="24" 
                      FontWeight="Bold"/>
        </StackPanel>

        <!-- ================= FORM ================= -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <StackPanel>
                <!-- Icon phòng ban -->
                <Border Width="80" 
                       Height="80" 
                       CornerRadius="12"
                       Background="{StaticResource PrimaryGradientBrush}"
                       Margin="0,0,0,20">
                    <TextBlock Text="🏢" 
                              FontSize="40"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>

                <!-- Mã phòng ban -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Mã phòng ban *" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,8"/>
                    <TextBox x:Name="txtMaPhongBan" 
                            Style="{StaticResource ModernTextBoxStyle}"
                            materialDesign:HintAssist.Hint="VD: PB001"/>
                </StackPanel>

                <!-- Tên phòng ban -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Tên phòng ban *" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,8"/>
                    <TextBox x:Name="txtTenPhongBan" 
                            Style="{StaticResource ModernTextBoxStyle}"
                            materialDesign:HintAssist.Hint="VD: Phòng Kỹ thuật"/>
                </StackPanel>

                <!-- Trưởng phòng -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Trưởng phòng" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,8"/>
                    <ComboBox x:Name="cboTruongPhong" 
                             DisplayMemberPath="Content"
                             SelectedValuePath="Tag"
                             materialDesign:HintAssist.Hint="-- Chọn trưởng phòng --"/>
                </StackPanel>

                <!-- Mô tả -->
                <StackPanel Margin="0,0,0,0">
                    <TextBlock Text="Mô tả" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,8"/>
                    <TextBox x:Name="txtMoTa" 
                            Style="{StaticResource ModernTextBoxStyle}"
                            Height="80"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            materialDesign:HintAssist.Hint="Nhập mô tả về phòng ban..."/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ================= FOOTER BUTTONS ================= -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                   Content="Hủy" 
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Width="120"
                   Height="40"
                   HorizontalAlignment="Left"
                   Click="BtnCancel_Click"/>

            <Button Grid.Column="1"
                   Content="💾 Lưu thông tin" 
                   Style="{StaticResource PrimaryButtonStyle}"
                   Width="150"
                   Height="40"
                   Click="BtnSave_Click"/>
        </Grid>
    </Grid>
</Window>