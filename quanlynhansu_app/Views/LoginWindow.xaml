<Window x:Class="quanlynhansu_app.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Đăng nhập - Quản lý nhân sự" 
        Height="600" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{StaticResource PrimaryGradientBrush}">

    <Grid>
        <!-- Container trung tâm -->
        <Border Width="350" 
                Height="450"
                Style="{StaticResource CardStyle}"
                VerticalAlignment="Center">
            <StackPanel>
                <!-- Logo và tiêu đề -->
                <TextBlock Text="🏢" 
                          FontSize="64" 
                          HorizontalAlignment="Center"
                          Margin="0,20,0,10"/>

                <TextBlock Text="QUẢN LÝ NHÂN SỰ" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="#667EEA"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,5"/>

                <TextBlock Text="Đăng nhập để tiếp tục" 
                          FontSize="13" 
                          Foreground="#999"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Form đăng nhập -->
                <TextBlock Text="Tên đăng nhập" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>

                <TextBox x:Name="txtUsername" 
                        Style="{StaticResource ModernTextBoxStyle}"
                        materialDesign:HintAssist.Hint="Nhập tên đăng nhập"
                        Margin="0,0,0,20"/>

                <TextBlock Text="Mật khẩu" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>

                <PasswordBox x:Name="txtPassword" 
                            Padding="10"
                            FontSize="14"
                            materialDesign:HintAssist.Hint="Nhập mật khẩu"
                            Margin="0,0,0,10"
                            KeyDown="TxtPassword_KeyDown"/>

                <!-- Thông báo lỗi -->
                <TextBlock x:Name="txtError" 
                          Foreground="Red" 
                          FontSize="13"
                          TextWrapping="Wrap"
                          Margin="0,10,0,20"
                          Visibility="Collapsed"/>

                <!-- Nút đăng nhập -->
                <Button Content="Đăng nhập" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Height="45"
                       FontSize="16"
                       Click="BtnLogin_Click"/>

                <!-- Link quên mật khẩu (optional) -->
                <TextBlock Text="Quên mật khẩu?" 
                          Foreground="#667EEA"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"
                          Cursor="Hand"
                          FontSize="13"
                          TextDecorations="Underline"
                          Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Nút đóng -->
        <Button Content="✕" 
                Width="35" 
                Height="35"
                Background="Transparent"
                Foreground="White"
                BorderThickness="0"
                FontSize="18"
                FontWeight="Bold"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Cursor="Hand"
                Click="BtnClose_Click"/>
    </Grid>
</Window>